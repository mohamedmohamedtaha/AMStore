<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.imagine.mohamedtaha.store.fragments.AddStoreFragment">
    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:id="@+id/listViewAddStore"
        style="@style/ListViewAndRecycleView"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/empty_view_store"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/empty_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/emptyview"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/empty_text_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empty_image"
            android:fontFamily="sans-serif-medium"
            android:text="No text Now "
            android:paddingTop="16dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/empty_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empty_text_first"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:paddingTop="8dp"
            android:text="@string/empty_view_subtitle_text"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#A2AAB0"/>


    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_store"
        style="@style/FloatingButtonFragment"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
