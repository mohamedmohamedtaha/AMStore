<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    app:cardCornerRadius="8dp"
    app:contentPadding="10dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/text_m"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="رقم الترصيد" />

        <TextView
            android:id="@+id/TVID"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/text_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <TextView
        android:id="@+id/text_code_category"
        app:layout_constraintTop_toBottomOf="@+id/text_m"
        app:layout_constraintRight_toRightOf="@+id/text_m"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="كود الصنف"
        android:textSize="15sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/TVCodeCategory"
        app:layout_constraintTop_toTopOf="@+id/text_code_category"
        app:layout_constraintRight_toLeftOf="@+id/text_code_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        />
     <TextView
            android:id="@+id/TVCodeٍStore"
         app:layout_constraintTop_toTopOf="@+id/text_code_store"
         app:layout_constraintRight_toLeftOf="@+id/text_code_store"
             android:layout_width="wrap_content"
         android:layout_marginEnd="16dp"
         android:layout_height="wrap_content"

          />

        <TextView
            android:id="@+id/text_code_store"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="@+id/text_m"
            app:layout_constraintTop_toBottomOf="@+id/text_code_category"
            android:layout_height="wrap_content"
            android:text="كود المخزن "
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"/>

    <TextView
        android:id="@+id/TVFirstBalance"
        app:layout_constraintTop_toTopOf="@+id/text_first_balance"
        app:layout_constraintRight_toLeftOf="@+id/text_first_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 />

    <TextView
        android:id="@+id/text_first_balance"
        app:layout_constraintRight_toRightOf="@+id/text_m"
        app:layout_constraintTop_toBottomOf="@+id/text_code_store"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الرصيد الأول"
         />
       <TextView
        android:id="@+id/TVNotes"
           app:layout_constraintTop_toTopOf="@+id/text_notes"
           app:layout_constraintRight_toLeftOf="@+id/text_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
    <TextView
        android:id="@+id/text_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ملاحظات"
        app:layout_constraintRight_toRightOf="@+id/text_m"
        app:layout_constraintTop_toBottomOf="@+id/text_first_balance"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="@color/primary_text"
        android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>